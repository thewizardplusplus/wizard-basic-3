include "range/number"
include "io"

function Main(_)
	let i = NumberRangeNew([1, 12])
	Show("Range size: ")
	Show(ToString(i.size, 0))
	Show(".\n")

	while RangeNext(i) do
		Show("#")
		Show(ToString(i.index, 0))
		Show(": ")
		Show(ToString(i.value, 1))
		if i.first then
			Show(" - it's first")
		else if i.last then
			Show(" - it's last")
		end
		Show(";\n")
	end
end
