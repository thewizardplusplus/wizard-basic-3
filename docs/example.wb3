include "range"
include "io"

function Main(arguments)
	let i = RangeReverseSimple(1, 12)
	while RangeNext(i) do
		Show("#")
		Show(ToString(i.index, 0))
		Show(": ")
		Show(ToString(i.value, 1))
		if i.first then
			Show(" - it's first")
		else if i.last then
			Show(" - it's last")
		end
		Show(";\n")
	end
end
