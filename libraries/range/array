include "args"
include "general"

structure ArrayRange
	array
	start
	finish
	reverse

	size
	value
	first
	last
	index
end

note ArrayRangeNew(array, start, finish, reverse = FALSE)
function ArrayRangeNew(args)
	let array = Arg([args, 0])
	let start = Arg([args, 1, 0])
	let finish = Arg([args, 2, GetLength(array)])
	let reverse = Arg([args, 3, FALSE])

	let range = new ArrayRange
	range.array = array

	if not reverse then
		range.start = start
		range.finish = finish
	else
		range.start = finish - 1
		range.finish = start - 1
	end

	range.reverse = reverse

	range.size = finish - start
	range.first = FALSE
	range.last = not range.size > 0

	if not reverse then
		range.index = range.start - 1
	else
		range.index = range.start + 1
	end

	return range
end
