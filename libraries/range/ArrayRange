include "general"

structure ArrayRange
	array
	start
	finish
	reverse

	size
	value
	first
	last
	index
end

function ArrayRangeNew(array, start, finish, reverse)
	let range = new ArrayRange
	range.array = array
	if not reverse then
		range.start = start
		range.finish = finish
	else
		range.start = finish - 1
		range.finish = start - 1
	end
	range.reverse = reverse

	range.size = finish - start
	range.first = FALSE
	range.last = FALSE
	if not reverse then
		range.index = range.start - 1
	else
		range.index = range.start + 1
	end

	return range
end
