include "general"

function RangeNext(range)
	if range.last then
		return FALSE
	end

	range.value = range.value + range.step
	range.first = range.value == range.minimum
	if not range.reverse then
		range.last = range.value + range.step > range.maximum
	else
		range.last = range.value + range.step < range.maximum
	end
	range.index = range.index + 1

	return TRUE
end
